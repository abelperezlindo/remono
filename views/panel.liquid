<!-- views/panel.liquid -->
{% layout 'layout' %}

{% block title %}Tools{% endblock %}

{% block title-header %}Tools{% endblock %}

{% block content %}
<section>
  <div class="container">
    {% for tool in tools %}

    <h2 class="subtitle">{{ tool.0 }}</h2>
    <section class="flex">
      {% for item in tool.1 %}
      <div class="card">
        <h3 class="card-title">{{ item.1.name }}</h3>
        <div class="card-body">
          {{ item.1.description }}
        </div>
      </div>
      {% endfor %}
    </section>
    {% endfor %}
  </div>
</section>
{% endblock %}